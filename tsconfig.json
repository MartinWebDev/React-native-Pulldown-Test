{
    "compilerOptions": {
        "target": "es2017", 
        "module": "es2015", 
        "jsx": "react", 
        "outDir": "build", 
        "rootDir": "src", 
        "allowSyntheticDefaultImports": true, 
        "noImplicitAny": true, 
        "experimentalDecorators": true, 
        "preserveConstEnums": true, 
        "allowJs": true, 
        "sourceMap": true, 
        "removeComments": true
    }, 
    "exclude": [
        "index.android.js", 
        "index.ios.js", 
        "build", 
        "node_modules", 
        "__tests__"
    ]
}